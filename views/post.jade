extends layout

block content
  div.post
    h1
      a(href=post.url)
        = post.title
    span.date Posted on #{post.form_date} in #{post.category}
    div.post.content
      != post.content
    div.tags
      span.nav-header Tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
    div#disqus_thread
    script(type='text/javascript')
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'ircanywhere'; // required: replace example with your forum shortname
      var disqus_identifier = '#{post.title}.#{post.url}';
      var disqus_title = '#{post.title}';
      var disqus_url = 'http://blog.ircanywhere.com/#{post.url}';

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    noscript
      Please enable JavaScript to view the 
      a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.
